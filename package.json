{
  "name": "design-system-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "B2B Design System monorepo with Next.js, TypeScript, and Stitches",
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter @ds/design-system storybook\"",
    "dev:web": "pnpm --filter web dev",
    "dev:storybook": "pnpm --filter @ds/design-system storybook",
    "build": "pnpm -r build",
    "build:tokens": "pnpm --filter @ds/tokens build",
    "build:storybook": "pnpm --filter @ds/design-system build-storybook",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
